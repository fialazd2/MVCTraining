@model MoviesViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Movie</h2>

<div class="row">
    <div class="col-md-8">
        <section id="createMovieForm">
            @using (Html.BeginForm("Edit", "Movies", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(movie => movie.Id);

                <div class="form-group">
                    @Html.LabelFor(movie => movie.Title)
                    @Html.EditorFor(movie => movie.Title)
                </div>

                <div class="form-group">
                    @Html.LabelFor(movie => movie.Genre)
                    @Html.EnumDropDownListFor(movie => movie.Genre)
                </div>

                <div class="form-group">
                    @Html.LabelFor(movie => movie.ReleasedDate)
                    @Html.EditorFor(movie => movie.ReleasedDate)
                </div>

                <div class="form-group">
                    @Html.LabelFor(movie => movie.Director)
                    @Html.EditorFor(movie => movie.Director)
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Edit Movie" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

